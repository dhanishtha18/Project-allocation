<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/textview"
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="name" />

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TableRow>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="0dp"
                        style="@style/textview"
                        android:id="@+id/roll"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="roll" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="0dp"
                        style="@style/textview"
                        android:id="@+id/seat"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="seat" />
                </TableRow>

                <TableRow>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="0dp"
                        style="@style/textview"
                        android:id="@+id/enroll"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="enroll" />
                </TableRow>

                <TableRow>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="0dp"
                        style="@style/textview"
                        android:id="@+id/ut1"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="ut1" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="0dp"
                        style="@style/textview"
                        android:id="@+id/ut2"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="ut2" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="0dp"
                        style="@style/textview"
                        android:id="@+id/avg"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="avg" />
                </TableRow>

                <TableRow>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="0dp"
                        style="@style/textview"
                        android:id="@+id/group"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="group" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="0dp"
                        style="@style/textview"
                        android:id="@+id/individual"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="individual" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="0dp"
                        style="@style/textview"
                        android:id="@+id/micro"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="micro" />
                </TableRow>

                <TableRow>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="0dp"
                        style="@style/textview"
                        android:id="@+id/total"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="total" />
                </TableRow>
            </TableLayout>

            <androidx.appcompat.widget.AppCompatEditText
                style="@style/edittext"
                android:id="@+id/edit_seat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Seat Number"
                android:inputType="number"
                android:maxLength="6"
                android:visibility="gone" />

            <androidx.appcompat.widget.AppCompatEditText
                style="@style/edittext"
                android:id="@+id/edit_ut1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter U.T. 1 Marks"
                android:inputType="number"
                android:maxLength="2"
                android:visibility="gone" />

            <androidx.appcompat.widget.AppCompatEditText
                style="@style/edittext"
                android:id="@+id/edit_ut2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter U.T. 2 Marks"
                android:inputType="number"
                android:maxLength="2"
                android:visibility="gone" />

            <androidx.appcompat.widget.AppCompatEditText
                style="@style/edittext"
                android:id="@+id/edit_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Micro-Project Group Marks"
                android:inputType="number"
                android:maxLength="2"
                android:visibility="gone" />

            <androidx.appcompat.widget.AppCompatEditText
                style="@style/edittext"
                android:id="@+id/edit_individual"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Micro-Project Individual Marks"
                android:inputType="number"
                android:maxLength="2"
                android:visibility="gone" />

            <androidx.appcompat.widget.AppCompatButton
                style="@style/btn"
                android:id="@+id/edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Edit"
                android:drawableLeft="@drawable/edit"
                android:layout_marginBottom="10dp"/>

        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.cardview.widget.CardView>
</androidx.appcompat.widget.LinearLayoutCompat>